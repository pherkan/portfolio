<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="description" content="{{ metaDescription or renderData.metaDescription or summary or metadata.description }}">

    {% if canonical %}
    <link rel="canonical" href="{{ canonical | url }}" />
    {% endif %}

    <script defer data-domain="pherkan.com" src="https://plausible.io/js/script.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Space+Grotesk:wght@400;600&family=VT323&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/nes.css@2.3.0/css/nes.min.css">
    <link rel="stylesheet" href="{{ '/assets/css/iftar-arcade.css' | url }}">

    {% set ogTitle = renderData.title or title or metadata.title %}
    {% set ogDescription = metaDescription or renderData.metaDescription or summary or metadata.description %}
    {% set ogUrl = canonical or (site.url + page.url if site and site.url) %}
    {% set ogImage = ogImage or "/assets/img/pherkan_og.jpg" %}

    <meta property="og:title" content="{{ ogTitle }}">
    <meta property="og:description" content="{{ ogDescription }}">
    {% if ogUrl %}
    <meta property="og:url" content="{{ ogUrl }}">
    {% endif %}
    <meta property="og:image" content="{{ ogImage }}">
    <meta name="robots" content="noindex, nofollow">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ ogTitle }}">
    <meta name="twitter:description" content="{{ ogDescription }}">
    <meta name="twitter:image" content="{{ ogImage }}">
  </head>
  <body class="iftar-arcade">
    <main class="arcade-shell">
      {{ layoutContent | safe }}
    </main>
    <script defer src="{{ '/assets/js/iftar-arcade.js' | url }}"></script>
  </body>
</html>
