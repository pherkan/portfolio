---
layout: base.njk
section: home
---
<div class="home-page">
	<div class="home-page__bg-square"></div>

  {# Hero #}
  <div class="hero">
    <div class="hero__col">
      {% if home.body %}
        <h1 class="hero__headline">{{ home.body | safe }}</h1>
      {% endif %}
    </div>
  </div>

  {# Projects #}
  <div class="list-header">
    <h2 class="list-header__title">Projects</h2>
    <a class="btn btn--outline btn--sm" href="/projects" aria-label="View all projects">View All</a>
  </div>
  {% from "macros/projectcards.njk" import projectcards %}
  {{ projectcards(collections.project | reverse, 3, 'Featured projects') }}

  {# Articles #}
  <div class="list-header">
    <h2 class="list-header__title">Articles</h2>
    <a class="btn btn--outline btn--sm" href="/blog" aria-label="View all articles">View All</a>
  </div>
  {% from "macros/articlelist.njk" import articlelist %}
  {{ articlelist(
    articles = collections.post | reverse,
    show_tags = true,
    limit = 3
  ) }}

  {# External Links #}
  <div class="list-header">
    <h2 class="list-header__title">External Links</h2>
    {# Optional: Add a "View All" link if you plan a dedicated page later #}
    {# <a class="btn btn--outline btn--sm" href="/external-links">View All</a> #}
  </div>
  {% from "macros/externallinklist.njk" import externallinklist %}
  {{ externallinklist(links = collections.externalLink | reverse) }}

</div>
